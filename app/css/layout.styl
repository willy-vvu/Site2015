/*
 * Widths, proportions, and responsive layouts go here
 */
html, body
  height 100%

body
  margin 0
  width 90%
  max-width 800px
  margin-left auto
  margin-right auto

section
  position relative
  overflow hidden
  min-height 100%
  // For the button

#projects .thumbnail
  min-height 176px
  background-size cover
  background-position center

#projects label
  padding 8px
  display block
  text-align center

.spacefill
  height 128px

.comedown
  width 64px
  height 64px
  position absolute
  left 50%
  bottom 32px
  margin-left -32px

#splash
  h1
    position absolute
    bottom 50%
    max-height 50%;
    margin-bottom -100px

