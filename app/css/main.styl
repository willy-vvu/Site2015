splashColor = #5082ef
aboutColor = #ffc608
detailColor = #fc0a7a
projectsColor = #8600b7
aboutColor = #ffbd08

.splash-color
  background-color splashColor
.about-color
  background-color aboutColor
.projects-color
  background-color projectsColor
.detail-color
  background-color detailColor

.about-border
  border-top-color aboutColor
.projects-border
  border-top-color projectsColor
.detail-border
  border-top-color detailColor
nav.fading-border
  transition: opacity 400ms, border-top-color 400ms

@keyframes pulsate
  from
    background-color detailColor
  to
    background-color #ff5690

a
  text-decoration none
  color inherit

h1
  margin-top: 0

quotebefore, blockquotebefore
    content open-quote
quoteafter, blockquoteafter
    content close-quote

.list
  list-style none
  padding 0
  li
    margin-right 8px
    margin-bottom 8px
.list.text
  margin-bottom 2em
  li
    padding 12px
    display inline-block

.hideable
  display block
  transition opacity 400ms

.hidden
  opacity 0

#splash
  h1
    font-weight 100
    line-height 2em
    .myname, .myself, .myprojects, .myproject
      color white
      padding 2px 12px
      transition width
      cursor pointer

  .comedown.projects
    background-color projectsColor
  .comedown
    background-color detailColor

#detail
  h1
    border-top 5px solid detailColor
  .date
    font-style italic
  .list
    li
      background-color detailColor
      color white
    a:first-child>li
      -webkit-animation pulsate 1s infinite alternate
      -moz-animation pulsate 1s infinite alternate
      animation pulsate 1s infinite alternate
    a:active>li
      background-color #b10956
      -webkit-animation none
      -moz-animation none
      animation none
  article
    a
      color detailColor
  aside
    img
      width 100%
      margin-bottom 8px
  .comedown
    background-color projectsColor

#projects
  h1
    border-top 5px solid projectsColor
  .comedown
    background-color aboutColor

