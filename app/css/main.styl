#about
  position: relative
  h1
    border-top: 5px solid aboutColor

  .list
    li
      background-color: aboutColor
      color: white
    a:active li
      background-color: #eab505

  footer
    left: 0
    right: 0
    color: #aaa
    text-align: center
    position: absolute
    bottom: 24px

.comedown
  display: block
  padding: 0
  border: none
  color: white

h1
  margin-bottom: 1.5em

@media (min-width: 800px)
  h1
    font-weight: 100
    font-size: 2em
  #projectlist a
    width: 50%
    display: inline-block
  #projectlist li
    margin-right: 4px
  #projectlist a:nth-child(even) li
    margin-right: 0
    margin-left: 4px
