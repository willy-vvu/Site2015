  height: 100%

body
  margin: 0

section
  position: relative
  overflow: hidden
  width: 80%
  margin-left: auto
  margin-right: auto
  min-height: 100%

#projects .thumbnail
  min-height: 176px
  background-size: cover
  background-position: center
#projects label
