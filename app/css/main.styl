#about
  position relative
  h1
    border-top 5px solid aboutColor

  .list
    li
      background-color aboutColor
      color white
    a:active li
      background-color #eab505

  footer
    left 0
    right 0
    color #aaa
    text-align center
    position absolute
    bottom 24px

.comedown
  display block
  padding 0
  border none
  color white


// Spacing and nav
nav
  position fixed
  // Over 9000
  z-index 9001
  display block
  margin-left auto
  margin-right auto
  width 90%
  max-width 800px
  top 0
  left 0
  right 0
  border-top 5px solid transparent
  #navbutton
    position absolute
    top 0
    right 0
    opacity 1
    stroke black
    transition stroke 400ms
  #navbutton.active
    stroke white
  #navbutton:hover
    opacity 0.5
  #navbutton:active
    opacity 1
  #navlist
    margin 0
    display none
    li
      color white
      margin 0
      padding 12px


@media (min-width 800px)
  h1
    font-weight 100
    font-size 2em
  #projectlist a
    width 50%
    display inline-block
  #projectlist li
    margin-right 4px
  #projectlist a:nth-child(even) li
    margin-right 0
    margin-left 4px
  nav
    ul.list
      a
        display block
        float left
        width 33.333%
